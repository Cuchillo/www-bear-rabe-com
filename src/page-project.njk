  {{ FlexibleContent.flexible(data.acf.blocks_custom) }}
  {{ FooterProject.block(data.title.rendered, data.acf) }}
  {% set next = utils.getNext(all[renderData.language].projects, data.id) %}
  {{ NextProject.block(next) }} #}
</article>
